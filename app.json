{
  "id": "com.gruijter.insights2csv",
  "name": {
    "en": "Archive Insights",
    "nl": "Exporteer Insights"
  },
  "version": "3.2.0",
  "brandColor": "#2020df",
  "sdk": 3,
  "compatibility": ">= 5",
  "author": {
    "name": "Robin de Gruijter",
    "email": "gruijter@hotmail.com"
  },
  "copyright": "Robin de Gruijter (gruijter@hotmail.com)",
  "license": "GPL-3.0-or-later",
  "contributors": {
    "developers": [
      {
        "name": "Robin de Gruijter",
        "email": "gruijter@hotmail.com"
      },
      {
        "name": "Arie J. Godschalk",
        "email": "arie@qluster-it.nl"
      }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "gruijter"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/gruijter/com.gruijter.insights2csv/issues"
  },
  "homeyCommunityTopicId": 10976,
  "category": [
    "tools"
  ],
  "description": {
    "en": "Make backups of all insights",
    "nl": "Maak backups van alle insights"
  },
  "tags": {
    "en": [
      "export",
      "insights",
      "backup",
      "NAS",
      "webDAV",
      "csv",
      "excel"
    ],
    "nl": [
      "export",
      "insights",
      "backup",
      "NAS",
      "webDAV",
      "csv",
      "excel"
    ]
  },
  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },
  "permissions": [
    "homey:manager:api"
  ],
  "platforms": [
    "local"
  ],
  "api": {
    "getLogs": {
      "method": "GET",
      "path": "/getlogs"
    },
    "deleteLogs": {
      "method": "GET",
      "path": "/deletelogs"
    },
    "getResolutions": {
      "method": "GET",
      "path": "/getResolutions"
    },
    "getAppList": {
      "method": "GET",
      "path": "/getAppList"
    },
    "stopExport": {
      "method": "GET",
      "path": "/stopExport"
    },
    "exportAll": {
      "method": "POST",
      "path": "/exportAll"
    },
    "exportApp": {
      "method": "POST",
      "path": "/exportApp"
    },
    "testSmb": {
      "method": "POST",
      "path": "/testSmb"
    },
    "testFTP": {
      "method": "POST",
      "path": "/testFTP"
    },
    "testWebdav": {
      "method": "POST",
      "path": "/testWebdav"
    }
  },
  "flow": {
    "actions": [
      {
        "id": "archive_all",
        "title": {
          "en": "Export all insights",
          "nl": "Exporteer alle insights"
        },
        "titleFormatted": {
          "en": "Export all insights [[resolution]]",
          "nl": "Exporteer alle insights [[resolution]]"
        },
        "args": [
          {
            "name": "resolution",
            "type": "dropdown",
            "values": [
              {
                "id": "lastHour",
                "label": {
                  "en": "last hour"
                }
              },
              {
                "id": "last6Hours",
                "label": {
                  "en": "last 6 hours"
                }
              },
              {
                "id": "last24Hours",
                "label": {
                  "en": "last 24 hours"
                }
              },
              {
                "id": "last7Days",
                "label": {
                  "en": "last 7 days"
                }
              },
              {
                "id": "last14Days",
                "label": {
                  "en": "last 14 days"
                }
              },
              {
                "id": "last31Days",
                "label": {
                  "en": "last 31 days"
                }
              },
              {
                "id": "today",
                "label": {
                  "en": "today"
                }
              },
              {
                "id": "yesterday",
                "label": {
                  "en": "yesterday"
                }
              },
              {
                "id": "thisWeek",
                "label": {
                  "en": "this week"
                }
              },
              {
                "id": "lastWeek",
                "label": {
                  "en": "last week"
                }
              },
              {
                "id": "thisMonth",
                "label": {
                  "en": "this month"
                }
              },
              {
                "id": "lastMonth",
                "label": {
                  "en": "last month"
                }
              },
              {
                "id": "thisYear",
                "label": {
                  "en": "this year"
                }
              },
              {
                "id": "lastYear",
                "label": {
                  "en": "last year"
                }
              },
              {
                "id": "last2Years",
                "label": {
                  "en": "last 2 years"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "archive_app",
        "title": {
          "en": "Export insights of app",
          "nl": "Exporteer insights van app"
        },
        "titleFormatted": {
          "en": "Export all insights of [[selectedApp]] [[resolution]]",
          "nl": "Exporteer alle insights [[selectedApp]] [[resolution]]"
        },
        "args": [
          {
            "name": "selectedApp",
            "type": "autocomplete"
          },
          {
            "name": "resolution",
            "type": "dropdown",
            "values": [
              {
                "id": "lastHour",
                "label": {
                  "en": "last hour",
                  "nl": "laatse uur"
                }
              },
              {
                "id": "last6Hours",
                "label": {
                  "en": "last 6 hours",
                  "nl": "afgelopen 6 uur"
                }
              },
              {
                "id": "last24Hours",
                "label": {
                  "en": "last 24 hours",
                  "nl": "afgelopen 24 uur"
                }
              },
              {
                "id": "last7Days",
                "label": {
                  "en": "last 7 days",
                  "nl": "afgelopen 7 dagen"
                }
              },
              {
                "id": "last14Days",
                "label": {
                  "en": "last 14 days",
                  "nl": "afgelopen 14 dagen"
                }
              },
              {
                "id": "last31Days",
                "label": {
                  "en": "last 31 days",
                  "nl": "afgelopen 31 dagen"
                }
              },
              {
                "id": "today",
                "label": {
                  "en": "today",
                  "nl": "vandaag"
                }
              },
              {
                "id": "yesterday",
                "label": {
                  "en": "yesterday",
                  "nl": "gisteren"
                }
              },
              {
                "id": "thisWeek",
                "label": {
                  "en": "this week",
                  "nl": "deze week"
                }
              },
              {
                "id": "lastWeek",
                "label": {
                  "en": "last week",
                  "nl": "vorige week"
                }
              },
              {
                "id": "thisMonth",
                "label": {
                  "en": "this month",
                  "nl": "deze maand"
                }
              },
              {
                "id": "lastMonth",
                "label": {
                  "en": "last month",
                  "nl": "vorige maand"
                }
              },
              {
                "id": "thisYear",
                "label": {
                  "en": "this year",
                  "nl": "dit jaar"
                }
              },
              {
                "id": "lastYear",
                "label": {
                  "en": "last year",
                  "nl": "afgelopen jaar"
                }
              },
              {
                "id": "last2Years",
                "label": {
                  "en": "last 2 years",
                  "nl": "afgelopen 2 jaar"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "purge",
        "title": {
          "en": "Purge old files and folders",
          "nl": "Verwijder oude bestanden en mappen"
        },
        "titleFormatted": {
          "en": "Purge [[types]] older then [[daysOld]] days on [[storage]]",
          "nl": "Verwijder [[types]] ouder dan [[daysOld]] dagen op [[storage]]"
        },
        "args": [
          {
            "name": "storage",
            "type": "dropdown",
            "values": [
              {
                "id": "FTP",
                "label": {
                  "en": "FTP"
                }
              },
              {
                "id": "SMB",
                "label": {
                  "en": "NAS/SMB"
                }
              }
            ]
          },
          {
            "name": "types",
            "type": "dropdown",
            "values": [
              {
                "id": "onlyZip",
                "label": {
                  "en": "only ZIP files",
                  "nl": "alleen ZIP files"
                }
              },
              {
                "id": "allTypes",
                "label": {
                  "en": "all files and folders",
                  "nl": "alle bestanden en folders"
                }
              }
            ]
          },
          {
            "name": "daysOld",
            "type": "number",
            "min": 1,
            "placeholder": {
              "en": "number of days",
              "nl": "aantal dagen"
            }
          }
        ]
      }
    ]
  }
}